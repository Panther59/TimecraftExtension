
{
  "manifest_version": 3,
  "name": "TimeCraft Panel",
  "version": "1.0",
  "description": "Panel for time tracking during stand-up meetings.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://newvista.atlassian.net/jira/software/projects/TIMECRAFT/boards/1*"],
  "content_scripts": [
    {
      "matches": ["https://newvista.atlassian.net/jira/software/projects/TIMECRAFT/boards/1*"],
      "js": ["dist/content.js"]
    }
  ]
}
